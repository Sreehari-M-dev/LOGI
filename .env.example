# Backend Environment Variables (auth-server.js & logbook-server.js)
# Copy this file to .env and fill in actual values

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/LOGI

# JWT Secret for token signing (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Ports
AUTH_SERVICE_PORT=3002
LOGBOOK_SERVICE_PORT=3005

# For inter-service communication (backend to backend)
# Use this when auth-server and logbook-server are on different hosts
AUTH_SERVICE_URL=http://localhost:3002

# Idle timeout for sessions (milliseconds). If no activity occurs,
# sessions expire server-side even if the tab is closed.
IDLE_TIMEOUT_MS=900000

# Node Environment
NODE_ENV=development

# ============================================
# Frontend Environment Variables
# ============================================
# These are set as window variables in HTML or via build process

# Auth Service API (update after deploying auth-server to Render)
REACT_APP_AUTH_API=http://localhost:3002/api/auth

# Logbook Service API (update after deploying logbook-server to Render)
REACT_APP_LOGBOOK_API=http://localhost:3005/api/logbook

